# Postgres/My Configuration
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_DB=
DATABASE_PORT=
DATABASE_HOST=

# Spring Boot DataSource Configuration for PostgreSQL
SPRING_DATASOURCE_URL=jdbc:postgresql://spring-db:${PGPORT}/${POSTGRES_DB}
SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}

# Spring Boot DataSource Configuration for MySQL
SPRING_DATASOURCE_URL=jdbc:mysql://spring-db:${DATABASE_PORT}/${DATABASE_DB}
SPRING_DATASOURCE_USERNAME=${DATABASE_USER}
SPRING_DATASOURCE_PASSWORD=${DATABASE_PASSWORD}

# JWT Secret Key
#   head -c64 /dev/urandom | basenc --base64url | tr -d \\n
SPRING_SECURITY_JWT_SECRET_KEY=

# Spring Boot: JWT Access Key Expiration (in milliseconds)
# 15 * 60 * 1000
SPRING_SECURITY_JWT_ACCESS_EXP=

# Spring Boot: JWT Refresh Key Expiration (in milliseconds)
# 60 * 60 * 1000 -> minutes
# 60 * 60 * 24 * 1000 -> hours
SPRING_SECURITY_JWT_REFRESH_EXP=

SPRING_SECURITY_ISSUER=
SPRING_SECURITY_SUBJECT=

# Spring Boot: CORS Configuration
SPRING_SECURITY_CORS_ALLOWED_ORIGIN=
SPRING_SECURITY_CORS_ALLOW_CREDENTIALS=
SPRING_SECURITY_CORS_MAX_AGE=